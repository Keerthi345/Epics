<!DOCTYPE html>
<html lang="en">
 
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visitor Tracking</title>
    <!-- <link rel="stylesheet" href="/project.css"> -->
    <style>
        /* Table style */
        #result {
            width: 100%;
            border-collapse: collapse;
            font-size: 14px;
        }
    
        #result th,
        #result td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
    
        #result th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
    
        #result tr:nth-child(even) {
            background-color: #f9f9f9;
        }
    
        #result tr:hover {
            background-color: #f5f5f5;
        }
    
        /* Link style */
        #result a {
            color: #007bff;
            text-decoration: none;
        }
    
        #result a:hover {
            text-decoration: underline;
        }
    
        /* Responsive table */
        @media (max-width: 767px) {
            #result {
                overflow-x: auto;
            }
        }
    </style>
    
 
</head>
<body>
    
    <table id="result">
        <tr>
            <th>GATE_Id</th>
            <th>Name</th>
            <th>Phone_number</th>
            <th>Category</th>
            <th>Host_name</th>
            <th>Host_phonenumber</th>
            <th>Email</th>
            <th>Purpose</th>
            <th>Entering_Date</th>
            <th>Entering_time</th>
            <th>status</th>
            <th>Leaving_date</th>
            <th>Leaving_time</th>
        </tr>
        
            
            
        <% for(var i=0;i<visitorsdate.length;i++) { %>
            <tr>
                <td><%=visitorsdate[i].gate_id %></td>
                <td><%= visitorsdate[i].visitor_name %></td>
                <td><%= visitorsdate[i].phone_number %></td>
                <td><%=visitorsdate[i].category %></td>
                <td><%= visitorsdate[i].host_name %></td>
                <td><%= visitorsdate[i].phone %></td>
                <td><%= visitorsdate[i].email %></td>
                <td><%= visitorsdate[i].purpose %></td>
                <td><%= visitorsdate[i].arrival_date %></td>
                <td><%= visitorsdate[i].arrival_time %></td>
                <td><% if (visitorsdate[i].checked_in) { %>
                    Checked In
                <% } else { %>
                    not checked in
                    <% } %>
                </td>
                <td><% if (visitorsdate[i].destination_date) { %>
                     <%= visitorsdate[i].destination_date %>
                <% } else { %>
                    <a href="/update?visitorId=<%= visitorsdate[i].gate_id %>">Update Checkout date</a>
                <% } %></td>
                <td><% if (visitorsdate[i].destination_time) { %>
                    <%= visitorsdate[i].destination_time %>
               <% } else { %>
                   <a href="/update?visitorId=<%= visitorsdate[i].gate_id %>">Update Checkout Time</a>
               <% } %></td>

               
             </tr>
          <%  }  %>
                

        
        

    </table>
</body>
</html>